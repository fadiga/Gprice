<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="wrap_content" android:layout_height="100dp">
        <!-- Bottom View Start-->
        <LinearLayout
            android:id="@+id/delete_linear"
            android:layout_width="wrap_content"
            android:weightSum="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:background="#ffff3b0f">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@android:drawable/ic_menu_delete"
                android:id="@+id/delete_btt"
                android:backgroundTint="#000">
            </TextView>
            <!--What you want to show-->
        </LinearLayout>
        <!-- Bottom View End-->
        <!-- Surface View Start -->
            <RelativeLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:descendantFocusability="blocksDescendants"
                 android:id="@+id/rowLinearLayout"
                 android:orientation="horizontal"
                 android:background="#ffffff">
                <TextView
                    style="@style/textViewLabel"
                    android:id="@+id/nameProduct"
                    android:clickable="false"
                    android:autoText="false"
                    android:layout_gravity="bottom"
                    android:layout_alignParentLeft="false"
                    android:layout_alignParentStart="true"
                    android:text="Roulement 110 distant de bamako Mali"
                    android:layout_alignParentRight="false"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp" />
                <TextView
                    style="@style/textViewPrix"
                    android:id="@+id/priceValue"
                    android:text="1000"
                    android:layout_alignBaseline="@+id/dateP"
                    android:layout_alignBottom="@+id/dateP"
                    android:layout_toLeftOf="@+id/devise"
                    android:layout_toStartOf="@+id/devise"
                    android:gravity="center"
                    android:padding="1dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12/11/2014"
                    android:id="@+id/dateP"
                    android:gravity="center_horizontal|end"
                    android:layout_marginLeft="5dp"
                    android:layout_below="@+id/nameProduct" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Fcfa"
                    android:id="@+id/devise"
                    android:layout_alignBaseline="@+id/priceValue"
                    android:layout_alignEnd="@+id/nameProduct"
                    android:textStyle="italic"
                    android:textSize="10dp" />
                <!--<ImageView
                     android:id="@+id/editProd"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@android:drawable/ic_menu_edit"
                     android:focusable="false"
                     android:layout_alignParentTop="false"
                     android:layout_alignParentRight="false"
                     android:layout_alignParentEnd="true"
                     android:layout_marginRight="5dp"
                     android:layout_above="@+id/priceValue" />
                 -->
            </RelativeLayout>
        <!-- Surface View End -->

    </com.daimajia.swipe.SwipeLayout>


