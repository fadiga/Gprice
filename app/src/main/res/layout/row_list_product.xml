<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/rowLinearLayout"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:autoText="false"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="produit D110 gggggggggggggg g     r rrrrrr"
        android:layout_alignTop="@+id/editProd"
        android:layout_alignRight="@+id/priceValue"
        android:layout_alignEnd="@+id/priceValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="5dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priceValue"
        android:textStyle="bold"
        android:text="1000"
        android:gravity="end"
        android:layout_toStartOf="@+id/editProd"
        android:layout_below="@+id/nameProduct" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/11/2014"
        android:id="@+id/dateP"
        android:gravity="center_horizontal|end"
        android:layout_below="@+id/nameProduct"
        android:layout_alignLeft="@+id/nameProduct"
        android:layout_alignStart="@+id/nameProduct" />

    <ImageView
        android:id="@+id/editProd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@android:drawable/ic_menu_edit"
        android:focusable="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="5dp" />

</RelativeLayout>

