<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:id="@+id/rowLinearLayout"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/nameProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:autoText="false"
        android:textStyle="bold"
        android:layout_gravity="bottom"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true"
        android:text=" Roulement 110 distant de bamako Mali"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp" />
    <TextView
        style="@style/textViewPrix"
        android:id="@+id/priceValue"
        android:text="1000"
        android:layout_alignBottom="@+id/dateP"
        android:layout_toLeftOf="@+id/devise"
        android:layout_toStartOf="@+id/devise"
        android:layout_alignParentBottom="false"
        android:gravity="bottom" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12/11/2014"
        android:id="@+id/dateP"
        android:gravity="center_horizontal|end"
        android:layout_marginLeft="5dp"
        android:layout_below="@+id/nameProduct" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Fcfa"
        android:id="@+id/devise"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/priceValue"
        android:layout_alignParentBottom="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignTop="@+id/priceValue"
        android:gravity="center_vertical|bottom" />

    <!--<ImageView
         android:id="@+id/editProd"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:src="@android:drawable/ic_menu_edit"
         android:focusable="false"
         android:layout_alignParentTop="false"
         android:layout_alignParentRight="false"
         android:layout_alignParentEnd="true"
         android:layout_marginRight="5dp"
         android:layout_above="@+id/priceValue" />
     -->
</RelativeLayout>

